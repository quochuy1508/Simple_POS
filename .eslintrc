{
	"parser": "babel-eslint",
	"plugins": ["react"],
	"rules": {
		"max-len": [
			1,
			120,
			2,
			{
				"ignoreComments": true
			}
		],
		"react/prop-types": [2]
	},
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	},
	"settings": {
		"react": {
			"version": "detect" // React version. "detect" automatically picks the version you have installed.
		}
	},
	"extends": ["eslint:recommended", "plugin:react/recommended"]
}
